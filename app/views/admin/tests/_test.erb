<tr>
  <th class="align-middle" scope="row">
    <%= content_tag :span, test.title, class: 'test-title', data: {test_id: test.id} %>
    <%= render 'form_inline', test: test === @test ? @test : test  %>
  </th>
  <td class="align-middle" >
    <%= test.category.title %>
  </td>
  <td class="align-middle" >
    <%= link_to t('.show'), admin_test_path(test) %>
    <%= link_to t('.edit'), edit_admin_test_path(test),
                data: { test_id: test.id },
                class: 'form-inline-link'
    %>
    <%= link_to t('.delete'),
                    admin_test_path(test),
                    method: :delete,
                    data: {
                      confirm: t('.deleteConfirmation'),
                    }    %>
  </td>
</tr>
