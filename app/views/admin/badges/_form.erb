<label><%= form_badge_header(@badge) %></label>
<%= render 'shared/errors', resource: @badge %>
<%= form_with model: [:admin, @badge],
              local: true do |form| %>

  <%= form.label t('.name') %>
  <%= form.text_field :name %>
  <br/>

  <%= form.label t('.url') %>
  <%= form.text_field :url %>
  <br/>

  <%= form.label t('.description') %>
  <%= form.text_field :description %>
  <br/>

  <%= form.label t('.level') %>
  <%= form.select :level, level_select_options %>
  <br/>

  <%= form.label t('.category') %>
  <%= form.collection_select :category_id, Category.all, :id, :title, prompt:  @badge.new_record? %>
  <br/>

  <%= form.label t('.rule') %>
  <%= form.collection_select :rule_id,
                             Rule.all,
                             :id,
                             :description,
                             prompt:  @badge.new_record? %>
  <br/>

  <%= form.submit t('.submit') %>
  <%= link_to 'Back to all badges', admin_badges_path %>
<% end %>
