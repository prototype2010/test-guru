<tr>
  <th class="align-middle" scope="row">
    <%= badge.name  %>
  </th>
  <th class="align-middle" scope="row">
    <%= image_tag(badge.url, size: '25x25') %>
  </th>
  <th class="align-middle" scope="row">
    <%= badge.description  %>
  </th>
  <th class="align-middle" scope="row">
    <%= link_to t('.show'), admin_badge_path(badge) %>
    <%= link_to t('.edit'), edit_admin_badge_path(badge) %>
    <%= link_to t('.delete'),
                admin_badge_path(badge),
                method: :delete,
                data: {
                  confirm: 'Are you sure ? '
                }    %>
  </th>
</tr>
