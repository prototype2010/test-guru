<%= form_with model: @user, local: true do |form| %>
  <%= render 'shared/flash' %>
  <%= render 'shared/errors', resource: @user%>

  <%= form.label :user_name %>
  <%= form.text_field :name, id: :user_name %>
  <br/>

  <%= form.label :user_email %>
  <%= form.text_field :email, id: :user_email %>
  <br/>

  <%= form.label :user_password %>
  <%= form.text_field :password, id: :user_password, type: :password %>
  <br/>

  <%= form.label :user_password_confirmation %>
  <%= form.text_field :password_confirmation, id: :user_password_confirmation, type: :password %>
  <br/>

  <%= form.submit 'Create new guru' %>
  <%= link_to 'Sign in as guru', signin_path %>
<% end %>
